<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageMike"
        android:layout_width="284dp"
        android:layout_height="243dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        app:srcCompat="@drawable/mike" />

    <TextView
        android:id="@+id/textViewOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:layout_toEndOf="@id/imageMike"
        android:text="@string/michael" />

    <TextView
        android:id="@+id/textViewTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewOne"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/imageMike"
        android:text="@string/mike" />

    <TextView
        android:id="@+id/textViewThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTwo"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/imageMike"
        android:text="@string/wazowski" />


</RelativeLayout>